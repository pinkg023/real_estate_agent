<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6 col-lg-6">
      <br>
      <div class="card">
        <div class="card-header text-center">
          <%= "個人資料" %>
        </div>
        <div class="card-body">
          <strong>姓名：<%= @user.name %></strong>
          <br>
          <strong>Email：<%= @user.email %></strong> 
          <% if current_user.role == "admin" %>
              <br>
              <strong>使用者權限：<%= @user.role %></strong> 
          <% end %>
          <br>
          <strong>電話：<%= @user.tel %></strong> 
          <br>     
          <strong>手機：<%= @user.cel %></strong>   
          <br>
        </div>
      </div>
    </div>
    <br>
      <div class="col-sm-12 col-md-6 col-lg-6">
        <br>
        <div class="card">
          <div class="card-header text-center">
            <%= "推薦好友" %>
          </div>
            <div class="card-body">
              <% @invited_users.each do |user| %> 
                <strong><%= user.email %></strong><br>
              <% end %>
            </div>
        </div>
      </div>
    </div>


    <!-- Button trigger modal -->
    <div class="col-2 p-1 m-1">
      <button class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">顯示推薦連結<i class="fa fa-thumbs-o-up fa-lg"></i></button>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">個人推薦連結</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= @invite_link %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">關閉</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<br>