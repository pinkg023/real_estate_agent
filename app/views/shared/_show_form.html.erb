  <div class="col-md-10 col-lg-10 col-md-offset-1 col-lg-offset-1 well">  
      <%= form_for @post, url: admin_post_path do |f| %>
        <div class="form-group">
          <%= f.label "標題：" %>
          <%= f.text_field :title, :maxlength => 20, class: "form-control" %>
        </div>
        <div class="form-group">
          <label>內容：</label>
          <%= f.text_area :description, :maxlength => 800, :cols => "10", :rows => "5", class: "form-control" %>
        </div>    
      <% end %>
  </div>